<%= form_with model: warm_up, local: true do |form| %>
    <div class="form-group mb-3">
      <%= form.label :exercise, 'Exercise' %>
      <%= form.text_field :exercise, class: "form-control", required: true %>
    </div>
  
    <div class="form-group mb-3">
      <%= form.label :training_id, 'Training' %>
      <%= form.collection_select :training_id, Training.all, :id, :id, { prompt: 'Select Training' }, class: "form-control", required: true %>
    </div>
  
    <%= form.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  