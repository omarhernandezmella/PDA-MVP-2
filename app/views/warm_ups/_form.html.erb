<%= form_with model: @warm_up, local: true do |form| %>
  <div class="form-group mb-3">
    <%= form.label :exercise, 'Exercise' %>
    <%= form.text_field :exercise, class: "form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :training_id, 'Training' %>
    <%= form.collection_select :training_id, Training.all, :id, :exercise, { prompt: 'Select Exercise' }, class: "form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :youtube_video_id, "YouTube Video ID" %>
    <%= form.text_field :youtube_video_id, class: 'form-control' %>
  </div>

  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
