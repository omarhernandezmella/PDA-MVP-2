<%= form_with model: @warm_up, local: true do |form| %>
  <div class="form-group mb-3">
    <%= form.label :exercise, 'Ejercicio' %>
    <%= form.text_field :exercise, class: "form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :training_id, 'Entrenamiento' %>
    <%= form.collection_select :training_id, @trainings, :id, :exercise, { prompt: 'Seleccione el ejercicio' }, class: "form-control", required: true %>
  </div>

  

  <div class="mb-3">
    <%= form.label :video, "Subir Video", class: 'form-label' %>
    <div class="input-group">
      <input type="file" class="form-control" id="video" accept="video/mp4" <%= form.object.video.attached? ? '' : 'required' %>>
      <label class="input-group-text" for="video">Cargar</label>
    </div>
  </div>

  <%= form.submit "Guardar", class: "btn btn-primary" %>
<% end %>
