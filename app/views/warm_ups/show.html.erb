<div class="container mt-4">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3 class="card-title mb-0"><%= @warm_up.exercise %></h3>
        </div>
        <div class="card-body">
          <h5 class="card-subtitle mb-2 text-muted">Entrenamiento: <%= @warm_up.training.exercise %></h5>
          <h5 class="card-subtitle mb-2 text-muted">Usuario: <%= @warm_up.training.user.username %></h5>

          <% if @warm_up.videos.present? %>
            <% @warm_up.videos.each do |video| %>
              <div class="embed-responsive embed-responsive-16by9 mt-3 mb-3">
                <video width="100%" height="500" controls>
                  <source src="<%= rails_blob_path(video.file) %>" type="video/mp4">
                  Tu navegador no soporta videos.
                </video>
              </div>
            <% end %>
          <% else %>
            <p>No hay videos adjuntos.</p>
          <% end %>

          <div class="btn-group d-flex justify-content-center mt-2" role="group" aria-label="Acciones">
            <%= link_to 'Editar', edit_warm_up_path(@warm_up), class: 'btn btn-warning' %>
            <%= link_to 'Eliminar', @warm_up, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %>
            <%= link_to 'Volver', warm_ups_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
