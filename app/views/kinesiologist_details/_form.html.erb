<%= form_with model: kinesiologist_detail, local: true do |f| %>
  <div class="form-group mb-3">
    <%= f.label :education, "Educación" %>
    <%= f.text_field :education, class: "form-control", required: true %>
  </div>
  
  <div class="form-group mb-3">
    <%= f.label :description, "Descripción" %>
    <%= f.text_field :description, class: "form-control", required: true %>
  </div>
  
  <div class="form-group mb-3">
    <%= f.label :photo_url, "Link de la foto" %>
    <%= f.text_field :photo_url, class: "form-control" %>
  </div>
  
  <%= f.submit "Guardar", class: "btn btn-primary" %>
<% end %>
