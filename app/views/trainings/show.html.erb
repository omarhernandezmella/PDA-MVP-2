<div class="container mt-5">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h1 class="fancy-title font-italic">Detalles del Entrenamiento</h1>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @training.exercise %></h5>
      <p class="card-text"><strong>Día:</strong> <%= @training.day %></p>
      <h5 class="card-subtitle mb-2 text-muted">Descripción:</h5>
      <p class="card-text"><%= @training.classification %></p>
      <h5 class="card-subtitle mb-2 text-muted">Calentamientos:</h5>
      <% @training.warm_ups.each do |warm_up| %>
        <div class="card mb-3">
          <div class="card-header bg-warning">
            <h5 class="card-title"><%= warm_up.exercise %></h5>
          </div>
          <div class="card-body">
            <div class="d-grid">
              <%= link_to 'Ver Calentamiento', warm_up_path(warm_up), class: 'btn btn-outline-primary btn-sm' %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="d-grid gap-2">
        <%= link_to 'Editar', edit_training_path(@training), class: 'btn btn-secondary' %>
        <%= link_to 'Eliminar', @training, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %>
        <%= link_to 'Volver', trainings_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
